#!/usr/bin/env bash

RED="\033[0;31m"
YELLOW="\033[0;33m"
GREEN="\033[0;32m"
OCHRE="\033[38;5;95m"
BLUE="\033[0;34m"
WHITE="\033[0;37m"
RESET="\033[0m"

logn()  { printf -- "--> %s " "$*"; }
logk()  { echo -e "${GREEN}OK${RESET}"; }

logn 'Turning on vim syntax highlighting...'
echo 'syntax on' >> $HOME/.vimrc
echo 'set tabstop=2' >> $HOME/.vimrc
echo 'set shiftwidth=2' >> $HOME/.vimrc
echo 'set expandtab' >> $HOME/.vimrc
logk

logn 'Installing vim-airline vim plugin...'

if [ ! -d "$HOME/.vim/pack/plugins/start/vim-airline/" ]; then
  git clone https://github.com/vim-airline/vim-airline.git $HOME/.vim/pack/plugins/start/vim-airline
fi

logk

logn 'Installing NERD_tree vim plugin...'

if [ ! -d "$HOME/.vim/pack/plugins/start/NERD_tree/" ]; then
  curl -o /tmp/NERD_tree.zip http://www.vim.org/scripts/download_script.php?src_id=23731
  unzip -q /tmp/NERD_tree.zip -d $HOME/.vim/pack/plugins/start/NERD_tree/
  rm /tmp/NERD_TREE.zip
fi

logk

logn 'Updating ~/.gitconfig...'
git config --global color.ui auto
logk

echo 'Please login to the AppStore then hit <ENTER>'
echo "30s timeout before continuing..."
read -n 1 -s -t 30

logn 'Installing Mac AppStore apps...'
# 1Password
mas install 443987910
# Microsoft Remote Desktop
mas install 715768417
# Slack
mas install 803453959
# Magnet
mas install 441258766
# Update apps that need them
mas upgrade
logk

logn 'Setting up Chef...'
if [ ! -d "$HOME/git/chef-repo" ]; then
  git clone git@github.com:daptiv/chef-repo.git $HOME/git/chef-repo
fi

if [ ! -f $HOME/.chef/knife.rb ]; then
  knife configure --defaults -s https://manage.chef.io/organizations/daptiv -r $HOME/git/chef-repo
else
  echo "$HOME/.chef/knife.rb already exists..."
  echo "To update $HOME/.chef/knife.rb please delete the knife.rb file and rerun Strap."
fi

echo -e "${YELLOW}!!!!!  Remember to download your chef_user.pem to $HOME/.chef/  !!!!!${RESET}"
logk

echo -e "${YELLOW}Prior to moving *.pem from ~/Downloads please ensure all relevant"
echo '"GO_AWS_*" pem files are downloaded from Password Safe.'
echo -e "10s timeout before continuing...${RESET}"
read -n 1 -s -t 10

mv $HOME/Downloads/*.pem $HOME/.ssh/
chmod 444 $HOME/.ssh/*.pem
echo -e "$GREEN OK $RESET"

echo -e "${YELLOW}Prior to moving Chef encryption keys from ~/Downloads please ensure all relevant"
echo 'files are downloaded from Password Safe.'
echo -e "10s timeout before continuing...${RESET}"
read -n 1 -s -t 10
mv $HOME/Downloads/encrypt* $HOME/.chef/
mv $HOME/Downloads/ops_encrypt* $HOME/.chef/

logn 'Setting up bash prompt to be awesome...'
cp -rf $HOME/.dotfiles/files/.git-prompt.bash $HOME/.git-prompt.bash
logk
