#!/usr/bin/env bash

#######################
# install vim plugins #
######################

# airline
echo 'Installing vim-airline plugin...'
git clone https://github.com/vim-airline/vim-airline.git $HOME/.vim/pack/plugins/start/vim-airline
echo 'OK'
# NERD_tree
echo 'Installing NERD_tree...'
curl -o /tmp/NERD_tree.zip http://www.vim.org/scripts/download_script.php?src_id=23731
unzip /tmp/NERD_tree.zip $HOME/.vim/pack/plugins/start/NERD_tree/
echo 'OK'
